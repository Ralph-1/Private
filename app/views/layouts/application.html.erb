<!DOCTYPE html>
<html>
  <head>
    <title>Events paradise | Join us Today!</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, class: "alert alert-#{key} alert-dismissable") do %>
        <%= value %>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <% end %>
    <% end %>

    <nav class="navbar navbar-expand-lg navbar-light bg-primary mb-0">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li><%= link_to 'Private Events', root_path, class: 'text-white font-weight-bold' %></li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <%= nav_links %>
        </form>

      </div>
    </nav>
    
    <div class="container"><%= yield %></div>
  </body>
</html>
